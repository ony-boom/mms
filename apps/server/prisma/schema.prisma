generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model State {
  key   String @id
  value String
}

model User {
  id       String @id @default(uuid())
  name     String @unique
  password String
}

model Track {
  id          String      @id @default(uuid())
  title       String
  path        String      @unique
  artists     Artist[]
  album       Album       @relation(fields: [albumId], references: [id])
  albumId     String
  playlists   PlayList[]
  dateAdded   DateTime    @default(now())
  playHistory PlayEvent[]
  isFavorite  Boolean     @default(false)

  @@index([albumId])
  @@index([dateAdded])
  @@index([isFavorite])
  @@index([title])
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  tracks Track[]
  albums Album[]

  @@index([name])
}

model Album {
  id        String   @id @default(uuid())
  title     String
  tracks    Track[]
  artists   Artist[]
  coverPath String?

  @@index([title])
}

model PlayList {
  id     String  @id @default(uuid())
  name   String
  tracks Track[]

  @@index([name])
}

model PlayEvent {
  id       String   @id @default(uuid())
  track    Track    @relation(fields: [trackId], references: [id])
  trackId  String
  playedAt DateTime @default(now())

  @@index([trackId, playedAt])
  @@index([playedAt])
}
